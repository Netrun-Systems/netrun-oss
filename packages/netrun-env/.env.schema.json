{
  "$schema": "https://netrunsystems.com/env-schema/v1",
  "version": "1.0",
  "variables": {
    "DATABASE_URL": {
      "type": "url",
      "required": true,
      "protocols": [
        "postgresql",
        "postgresql+asyncpg"
      ],
      "example": "postgresql://user:password@localhost:5432/dbname"
    },
    "DATABASE_POOL_SIZE": {
      "type": "integer",
      "required": true,
      "example": "10"
    },
    "DATABASE_TIMEOUT": {
      "type": "integer",
      "required": true,
      "min": 0,
      "example": "30"
    },
    "JWT_SECRET_KEY": {
      "type": "secret",
      "required": true,
      "minLength": 32,
      "example": "[SECRET_VALUE]"
    },
    "JWT_ALGORITHM": {
      "type": "string",
      "required": true,
      "example": "RS256"
    },
    "JWT_EXPIRY": {
      "type": "integer",
      "required": true,
      "example": "3600"
    },
    "API_BASE_URL": {
      "type": "url",
      "required": true,
      "protocols": [
        "https"
      ],
      "example": "https://api.example.com"
    },
    "API_TIMEOUT": {
      "type": "integer",
      "required": true,
      "min": 0,
      "example": "30"
    },
    "API_KEY": {
      "type": "secret",
      "required": true,
      "minLength": 32,
      "example": "[SECRET_VALUE]"
    },
    "REDIS_URL": {
      "type": "url",
      "required": true,
      "protocols": [
        "redis",
        "rediss"
      ],
      "example": "redis://localhost:6379/0"
    },
    "REDIS_POOL_SIZE": {
      "type": "integer",
      "required": true,
      "example": "5"
    },
    "APP_NAME": {
      "type": "string",
      "required": true,
      "example": "NetrunService"
    },
    "APP_VERSION": {
      "type": "string",
      "required": true,
      "example": "1.0.0"
    },
    "DEBUG": {
      "type": "boolean",
      "required": true,
      "allowed_values": [
        "true",
        "false",
        "yes",
        "no",
        "1",
        "0"
      ],
      "example": "false"
    },
    "ADMIN_EMAIL": {
      "type": "email",
      "required": true,
      "example": "admin@netrunsystems.com"
    },
    "SMTP_HOST": {
      "type": "string",
      "required": true,
      "example": "smtp.example.com"
    },
    "SMTP_PORT": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 65535,
      "example": "587"
    },
    "SENTRY_DSN": {
      "type": "url",
      "required": true,
      "protocols": [
        "https"
      ],
      "example": "https://public@sentry.example.com/1"
    },
    "LOG_LEVEL": {
      "type": "string",
      "required": true,
      "example": "INFO"
    }
  }
}